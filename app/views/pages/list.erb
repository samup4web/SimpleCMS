

<div class="Pages list">

  <%= link_to("<< Back to Subject", {:controller => 'subjects', :action => 'list'}, :class => 'back-link') %>

  <h2> Pages </h2>
  <%= link_to("Add New Page", {:action => 'new', :subject_id => @subject.id}, :class => 'action new') %>

  <div><%= pluralize(@pages.size, "page") %> found</div>

  <table class="listing" summary="Page list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Page</th>
      <th>Permalink</th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Action</th>
    </tr>
    <% @pages.each do |page| %>
        <tr class="<%= cycle('odd', 'even') %>">
          <td><%= page.position %></td>
          <td><%= page.name %></td>
          <td><%= page.permalink %></td>
          <td><%= page.subject_id %></td>
          <td class="center"><%= status_tag(page.visible)  %></td>
          <td class="actions">
            <%= link_to("View Section", {:controller => 'sections', :action => 'list', :page_id => page.id}, :class => "action show") %>
            <%= link_to("Show", {:action => 'show', :id => page.id, :subject_id => @subject.id }, :class => 'action show') %>
            <%= link_to("Edit", {:action => 'edit', :id => page.id, :subject_id => @subject.id}, :class => 'action edit') %>
            <%= link_to("Delete", {:action => 'delete', :id => page.id, :subject_id => @subject.id}, :class => 'action delete') %>
          </td>
        </tr>
    <% end %>
  </table>

</div>
