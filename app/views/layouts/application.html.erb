<!DOCTYPE html>
<html>
<head>
  <title>Simple Test layout</title>
  <%= stylesheet_link_tag  "public", :media => 'all' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="header">
  <h1>Simple CMS Admin</h1>
</div>
<div id="main">
  <% if !flash[:notice].blank? %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
  <% end %>
  <div id="content">
    <%= yield %>
  </div>
</div>
<div id="footer">
  <p id="copyright">&copy; 2012... me learning :D</p>
</div>
</body>
</html>

